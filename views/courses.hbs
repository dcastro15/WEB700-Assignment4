<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  function updateCourses() {
    $.ajax({
      url: '/courses', // The route to fetch the updated data
      method: 'GET',
      dataType: 'json',
      success: function (data) {
        // Update the courses table with the new data
        var tableBody = '';
        data.forEach(function (course) {
          tableBody += `
            <tr>
              <td>${course.courseId}</td>
              <td>${course.courseCode}</td>
              <td>${course.courseDescription}</td>
            </tr>
          `;
        });
        $('#coursesTable tbody').html(tableBody);
      },
      error: function (xhr, status, error) {
        console.error('Error fetching updated data:', error);
      }
    });
  }

  // Call the updateCourses function on page load to populate the table initially
  updateCourses();
</script>

<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Courses</h2>
    <hr />

    <table class="table">
      <thead>
        <tr>
          <th>Course ID</th>
          <th>Course Code</th>
          <th>Course Description</th>
          <th>Update Course</th>
          <th>Delete Course</th>
        </tr>
      </thead>
      <tbody id="coursesTable">
        {{#each courses}}
          <tr>
            <td>{{this.courseId}}</td>
            <td>{{this.courseCode}}</td>
            <td>{{this.courseDescription}}</td>
            <td><a href="/courses/update/{{this.courseId}}" class="btn btn-primary">Update</a> </td>
            <td>
          <form method="POST" action="/courses/delete/{{this.courseId}}">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">Delete</button>
          </form>
        </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  </div>


  <div class="col-md-12">
    <br>
    <h2>Add Course</h2>

    <form method="POST" action="/courses/add">
      <div class="form-group">
        <label for="courseCode">Course Code:</label>
        <input type="text" class="form-control" id="courseCode" name="courseCode" required>
      </div>
      <div class="form-group">
        <label for="courseDescription">Course Description:</label>
        <input type="text" class="form-control" id="courseDescription" name="courseDescription" required>
      </div>
      <button type="submit" class="btn btn-primary">Add Course</button>
    </form>

  </div>
</div>


