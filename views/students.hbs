<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Students</h2>
    <hr />

    {{#if updatedStudentNum}}
      <div class="alert alert-success" role="alert">
        Student with number {{updatedStudentNum}} has been successfully updated.
      </div>
    {{/if}}

    {{#unless students}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{else}}
      <table class="table">
        <thead>
          <tr>
            <th>Student Number</th>
            <th>First Name</th>
            <th>Last Name</th>
          </tr>
        </thead>
        <tbody id="studentsTable">
          {{#each students}}
            <tr>
              <td>{{this.studentNum}}<span><a style="text-align: center; position: relative; left: 90px;" class="btn btn-primary" href="/students/update/{{this.studentNum}}">Update</a> <form action="/students/delete/{{this.studentNum}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this student?')">
                  <button type="submit" class="btn btn-danger" style="position: relative; left: 205px; bottom: 35px;">Delete</button> <a style="text-align: center; position: relative; left: 213px; bottom: 35px;" class="btn btn-primary" href="/students/view/{{this.studentNum}}">View</a>
                </form></span></td>
              <td>{{this.firstName}}</td>
              <td>{{this.lastName}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/unless}}

    <!-- Add the "Add Student" link using the navLink helper -->
    <a class="btn btn-primary" href="/students/add">Add Student</a>
  </div>
</div>
