<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Students</h2>
    <hr />

    {{#unless students}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{else}}
      <table class="table">
        <thead>
          <tr>
            <th>Student Number</th>
            <th>First Name</th>
            <th>Last Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each students}}
            <tr>
              <td>{{this.studentNum}}<span><a style="text-align: center; position: relative; left: 90px;" class="btn btn-primary" href="/students/update/{{this.studentNum}}">Update</a> <form action="/students/delete/{{this.studentNum}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this student?')">
  <input type="hidden" name="studentNum" value="{{this.studentNum}}">
  <button type="submit" class="btn btn-danger" style="position: relative; left: 205px; bottom: 35px;">Delete</button>
</form> <a style="text-align: center; position: relative; left: 213px; bottom: 35px;" class="btn btn-primary" href="/students/view/{{this.studentNum}}">View</a>
                </span></td>
              <td>{{this.firstName}}</td>
              <td>{{this.lastName}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/unless}}
  </div>
</div>
